<h1>Редагувати {{course.title}}</h1>
{{#if error}}
      <p class="alert">{{error}}</p>
{{/if}}
<form action="/courses/edit" method="POST">
    <div class="input-field">
          <input name="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Назва курса</label>
          <span class="helper-text" data-error="Ведіть назву"></span>
    </div>
    <div class="input-field">
          <input name="price" type="number" class="validate" required min="1"value="{{course.price}}">
          <label for="price">Ціна</label>
          <span class="helper-text" data-error="Введіть ціну"></span>
    </div>
    <div class="input-field">
          <input name="img" type="text" class="validate" required value="{{course.img}}">
          <label for="img">URL</label>
          <span class="helper-text" data-error="Введіть шлях"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button typu="submit" class="btn btn-primary">Редагувати</button>
</form>

<form action="/courses/remove" method="post" class="form-remove">
      <input type="hidden" name='id' value="{{course.id}}">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit " class="btn red">Видалити курс</button>
      
</form>