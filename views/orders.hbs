

{{#if orders.length}}
    <h1>Закази</h1> 
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">
                        {{_id}}
                    </span>
                    <p class="date">Дата: {{date}}</p>
                    <p><em>{{user.userId.name}}</em> {{user.userId.email}}</p>

                    <ol>
                        {{#each courses}}
                            <li>
                                {{course.title}} (x<strong>{{count}}</strong>)
                            </li>
                        {{/each}}    
                    </ol>
                    <hr>

                    <p>Ціна: <span class="price">{{price}}</span></p>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
<h1>Заказів немає</h1>
{{/if}}