    {{#if courses.length}}
     <h1>Корзина</h1>
    <div class="card  card-order">
        <table>
            <thead>
                <tr>
                    <th>Назва курса</th>
                    <th>Кількість</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Видалити</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <p><strong>Ціна: <span class="price">{{price}}</span></strong></p>
        <form action="/orders" method="post">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Зробити заказ</button>
        </form>
    </div>
    {{else}}
        <h1>Корзина пуста</h1>
    {{/if}}
